<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent" android:layout_height="match_parent">    <Button        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Go to gallery"        android:id="@+id/button"        />    <ImageView        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:adjustViewBounds="true"        android:id="@+id/imageView"        android:layout_below="@+id/button"        />    <TextView         android:layout_alignParentBottom="true"        android:textColor="#45000000"        android:layout_centerHorizontal="true"        android:visibility="visible"        android:id="@+id/text"        android:layout_width="wrap_content"        android:layout_height="wrap_content" /></RelativeLayout>